{
  "name": "on",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/on/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": [
        "{projectRoot}/dist"
      ],
      "options": {
        "command": "npm run build",
        "cwd": "{projectRoot}"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run lint",
        "cwd": "{projectRoot}"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run test",
        "cwd": "{projectRoot}"
      }
    },
    "nx-release-publish": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "build"
      ],
      "options": {
        "command": "npm publish --access public --provenance",
        "cwd": "{projectRoot}"
      }
    }
  },
  "tags": []
}
