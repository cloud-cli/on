{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "sharedGlobals"
    ],
    "production": [
      "default",
      "!{projectRoot}/test/**/*",
      "!{projectRoot}/**/*.test.ts"
    ],
    "sharedGlobals": []
  },
  "targetDefaults": {
    "build": {
      "inputs": [
        "production",
        "^production"
      ]
    },
    "lint": {
      "inputs": [
        "default",
        "^default"
      ]
    },
    "test": {
      "inputs": [
        "default",
        "^default"
      ]
    }
  },
  "release": {
    "projects": [
      "on"
    ],
    "projectsRelationship": "independent",
    "version": {
      "conventionalCommits": true
    },
    "git": {
      "commit": true,
      "tag": true,
      "push": true,
      "commitMessage": "chore(release): publish {projectName} {version}"
    }
  }
}
